<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSQLite.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Agenda en Xamarin" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button HorizontalOptions="Center" VerticalOptions="Center" Text="Agregar personas" Clicked="Button_Clicked"></Button>
        <Button x:Name="btnListPersons" HorizontalOptions="Center" VerticalOptions="Center" Text="Ver personas" Clicked="btnListPersons_Clicked"></Button>
    </StackLayout>

</ContentPage>
